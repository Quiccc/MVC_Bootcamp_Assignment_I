@model IEnumerable<MVC_Bootcamp_Assignment_I.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Order Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
