@model IEnumerable<MVC_Bootcamp_Assignment_I.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Title</th>
            <th>Date of Birth</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.Raw(item.FirstName + " " + item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                <td>@Html.DisplayFor(modelItem => item.HomePhone)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td><a href=@Html.Raw("/EmployeeDetails/Edit?employeeId=" + item.EmployeeId) class="btn btn-primary">Update</a></td>
            </tr>
        }
    </tbody>
</table>
